# ---------- Build stage ----------
FROM node:20-alpine AS build
# â†‘ upgrade node, Vite warned you

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build
# produces /app/dist

# ---------- Runtime stage ----------
FROM node:20-alpine

WORKDIR /app

RUN npm install -g serve

COPY --from=build /app/dist ./dist

EXPOSE 3000
CMD ["serve", "-s", "dist", "-l", "3000"]
